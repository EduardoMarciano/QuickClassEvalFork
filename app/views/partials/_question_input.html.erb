<!-- Expects to be inside a form helper tag -->
<% question_html_id = "question-#{question.id}" %>

<% case question.type %>
<% when 'TextInputQuestion'%>
    <%= form.label question.id, "Resposta: " %>
    <%= form.text_field question.id, disabled: %>
<% when 'MultipleChoiceQuestion'%>
    <% question.options.each do |option| %>
        <%= form.radio_button question.id, option, disabled: %>
        <%= form.label question.id, option %>
        <br>
    <% end %>
<% end %>