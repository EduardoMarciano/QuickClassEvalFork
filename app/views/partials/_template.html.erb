<% method = 'post' unless !method.nil? %>

<h2>Modelo #<%= template.id %></h2>
<p>
    <em>Semestre:</em> <%= template.semester.to_s %>
</p>

<%= form_with method:, scope: :questions do |form| %>
    <% template.questions.each do |question| %>
        <h3><%= question.label %></h3>
        <%= question.description %>
        <br>
        <% if question.input? %>
            <%= render partial: 'partials/question_input', locals: { question:, form:, disabled: true} %>
        <% end %>
    <% end %>
    <br>
    <%= form.submit %>
<% end %>