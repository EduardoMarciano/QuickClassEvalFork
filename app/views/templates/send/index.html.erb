<% if flash[:error] %>
  <div class="alert alert-danger">
    <%= flash[:error] %>
  </div>
<% end %>

<h1> Enviar Formul√°rios </h1> <br>

<%= form_with url: send_forms_from_templates_path(:template_id), method: 'post' do |form| %>
  <%= form.collection_select :template_id, @templates, :id, :to_s %>
  <br><br>
  <% if Discipline.count > 0 %>
    <%= form.collection_check_boxes :discipline_ids, @disciplines, :id, :name_detailed do |f| %>
      <span>
        <div style="width: 40%">
          <div style="display:inline-block;"> <%= f.label %> </div> 
          <div style="float:right;"> <%= f.check_box %> </div> 
          <br><br>
        </div>
      <span>
    <% end %>
  <% else %>
    <h4> Sem disciplinas cadastradas. </h4> <br>
  <% end %>
  <div style="width: 18%;">
    <div style="display: inline-block;"> <%= link_to 'Voltar', manager_path, class: 'btn btn-primary' %> </div>
    <div style="float: right;"> <%= form.submit "Enviar", class: "btn btn-primary" %> </div> <br><br>
  </div>
<% end %>

<style>
.btn-primary{
  background-color: #007FFF;
  color: white !important;
  padding: 10px 25px;
  border-radius: 4px;
  border: none;
}
</style>
